pipeline{
    agent any
      tools{
        nodejs "NodeJS"
        }
    stages{
        stage ('Sonar Cube Stuff'){
            steps{
                script {
                    scannerHome = tool "SonarQube"
                }
                withSonarQubeEnv('JonSonarCloudCosImUnique'){
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }
        stage ('Setup'){
            steps{
                sh 'npm install'
            }
        }
        stage ('Build'){
            steps{
                git branch: 'main', url:'https://github.com/Tizzer1331/TSINextReactApp.git'
            }
        }

        stage('Summon the Elector Counts'){
            steps{
                sshagent (credentials: ['JonSSHloginssssshhhhhh']) {
                   sh("ssh -o StrictHostKeyChecking=no ubuntu@13.41.198.172 'rm -rf TSINextReactApp && git clone https://github.com/Tizzer1331/TSINextReactApp.git && cd TSINextReactApp && npm ci && npm run dev'")
                }
            }
        }
    }
}
